{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"" }
  ],
  "wordPattern": "\\$?\\^?%?[A-Za-z][A-Za-z0-9]*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*\\.\\s*",
    "decreaseIndentPattern": "^\\s*$"
  }
}
